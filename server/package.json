{
  "name": "tiny-inventory-server",
  "type": "commonjs",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "migrate": "prisma migrate deploy",
    "seed": "prisma db seed",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.7.3",
    "@jest/globals": "30.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.14",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.11.30",
    "eslint": "9.39.2",
    "jest": "29.7.0",
    "prisma": "^7.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.0.0",
    "typescript": "5.9.3",
    "vitest": "^1.3.1"
  }
}
