{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["jest", "node"],
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/db/__mocks__", "jest.config.cjs"],
  "exclude": ["node_modules", "dist"]
}
